{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@constants/*": ["./src/constants/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@store/*": ["./src/store/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages": ["./src/pages"],
      "@constants": ["./src/constants"],
      "@components": ["./src/components"],
      "@hooks": ["./src/hooks"],
      "@utils": ["./src/utils"],
      "@store": ["./src/store"],
      "@lib": ["./src/lib"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
