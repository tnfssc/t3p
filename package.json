    "react-dom": "^18.2.0",
    "stylelint": "^14.14.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-tailwindcss": "^0.0.6",
    "tailwindcss": "^3.2.1",
    "typescript": "^4.8.4",
    "vite": "^4.0.4",
    "vite-aliases": "^0.10.0",
    "vitest": "^0.26.3",
    "wouter": "^2.10.0-alpha.1",
    "zustand": "^4.2.0"
  }
