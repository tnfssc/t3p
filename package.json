{
  "name": "your-app-name",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src",
    "tscheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage --watch false",
    "stylelint": "stylelint \"**/*.{css,scss}\" --ignore-path .gitignore",
    "prettier": "prettier . --ignore-path .gitignore",
    "format": "yarn prettier --write && yarn stylelint --fix && yarn lint --fix",
    "fullcheck": "yarn prettier --check && yarn lint && yarn stylelint && yarn tscheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.26",
