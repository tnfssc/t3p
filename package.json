    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitejs/plugin-react-swc": "^3.0.1",
    "@vitest/coverage-c8": "^0.24.3",
    "autoprefixer": "^10.4.12",
    "cross-fetch": "^3.1.5",
    "daisyui": "^2.46.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "immer": "^9.0.17",
    "jsdom": "^20.0.1",
    "postcss": "^8.4.18",
